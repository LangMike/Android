<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/rl_userage"
                    android:id="@+id/rl_about_you"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:text=""
                  android:textColor="@color/black"
                  android:textSize="@dimen/_13sdp"
                  android:layout_margin="@dimen/_10sdp"
                  android:id="@+id/fav_provider_name"
                  android:gravity="left|start"

                  android:layout_toLeftOf="@+id/profilepic"
                  android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_aboutYou"
                android:layout_below="@+id/fav_provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:gravity="left|start"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/profilepic"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
        />

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/profilepic"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@mipmap/ic_list_profile_pic_preview_placeholer"
                app:civ_border_width="1dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_1sdp"
                app:civ_border_color="#FF000000"/>

        <!--<ImageView android:layout_width="@dimen/_60sdp"-->
                   <!--android:textColor="@color/colorPrimary"-->
                   <!--android:textSize="@dimen/_13sdp"-->
                   <!--android:layout_centerVertical="true"-->
                   <!--android:layout_marginLeft="@dimen/_10sdp"-->
                   <!--android:layout_marginRight="@dimen/_20sdp"-->
                   <!--android:layout_marginTop="@dimen/_1sdp"-->
                   <!--android:layout_alignParentRight="true"-->
                   <!--android:background="@mipmap/ic_list_profile_pic_preview_placeholer"-->
                   <!--android:layout_height="@dimen/_60sdp"/>-->

        <ImageView android:layout_width="wrap_content"
                   android:background="@mipmap/ic_favourite_on"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/_2sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:id="@+id/iv_like_dislike"
                   android:layout_height="wrap_content"/>

        <View android:layout_below="@+id/tv_aboutYou"
              android:layout_marginTop="@dimen/_20sdp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_1sdp"
              android:background="@color/gray"></View>

    </RelativeLayout>
</RelativeLayout>
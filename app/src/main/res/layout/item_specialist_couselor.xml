<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
               >

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_counselor_details"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:text=""
                  android:textColor="@color/black"
                  android:textSize="@dimen/_13sdp"
                  android:layout_margin="@dimen/_10sdp"
                  android:id="@+id/counselor_name"
                  android:gravity="left|start"
                  android:layout_toLeftOf="@+id/profilepic"
                  android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_counselor_description"
                android:layout_below="@+id/counselor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:gravity="left|start"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/profilepic"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_4sdp"
        />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_60sdp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/_13sdp"
                   android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_1sdp"
                  android:id="@+id/profilepic"
                   android:background="@mipmap/ic_list_profile_pic_preview_placeholer"
                  android:layout_height="@dimen/_60sdp"/>

        <View android:layout_below="@+id/tv_counselor_description"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_1sdp"
              android:background="@color/gray"></View>

    </RelativeLayout>
</RelativeLayout>
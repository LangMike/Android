<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/rl_userage"
                    android:id="@+id/rl_about_you"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:text=""
                  android:textColor="@color/black"
                  android:textSize="@dimen/_13sdp"
                  android:layout_margin="@dimen/_10sdp"
                  android:id="@+id/name"
                  android:gravity="left|start"
                  android:layout_toLeftOf="@+id/profilepic"
                  android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_description"
                android:layout_below="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:gravity="left|start"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/profilepic"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
        />

        <TextView
                android:id="@+id/tv_profiency"
                android:layout_below="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:gravity="left|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/profilepic"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
        />

        <TextView
                android:id="@+id/tv_proffesion_title"
                android:layout_below="@+id/tv_profiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:gravity="left|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/profilepic"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
        />




        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:id="@+id/profilepic"
                android:background="@mipmap/ic_list_profile_pic_preview_placeholer"
                android:layout_height="@dimen/_60sdp"/>

        <View android:layout_below="@+id/tv_proffesion_title"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_1sdp"
              android:background="@color/gray"></View>

    </RelativeLayout>
</RelativeLayout>
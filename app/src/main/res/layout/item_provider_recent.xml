                      android:textSize="@dimen/_13sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:id="@+id/tv_calltime"
                      android:gravity="left|start"
                      android:layout_toLeftOf="@+id/profilepic"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:text=""
                      android:layout_below="@+id/tv_calltime"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:id="@+id/tv_name"
                      android:gravity="left|start"
                      android:layout_toLeftOf="@+id/profilepic"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_below="@+id/tv_name"
                          android:id="@+id/ll_duration"
                          android:layout_toLeftOf="@+id/profilepic"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_duration_in_contact"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Duaration in contact"
                        android:gravity="left|start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />
                <TextView
                        android:id="@+id/tv_total_duration"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:gravity="left|start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_below="@+id/ll_duration"
                          android:layout_toLeftOf="@+id/profilepic"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:id="@+id/ll_time"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Cost to user"
                        android:gravity="left|start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />
                <TextView
                        android:id="@+id/tv_total_cost"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:gravity="left|start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/bgColor"
        tools:context=".Fragment.user.schedule.ScheduleCall">


    <TextView android:layout_width="match_parent"
              android:id="@+id/checkandbook"
              android:text="Check and book available slot"
              android:textColor="@color/black"
              android:textSize="@dimen/_13sdp"
              android:layout_margin="@dimen/_10sdp"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_date"
                    android:layout_below="@+id/checkandbook"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Select date"
                  android:id="@+id/selectdata"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_16sdp"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:text="00:00:00"
                  android:id="@+id/selectDate"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_16sdp"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_timeslot"

                    android:layout_below="@+id/rl_date"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Time slot"
                  android:id="@+id/timeslot"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_16sdp"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:text="00:00 to 00:00"
                  android:id="@+id/timeslotData"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_16sdp"
                  android:layout_margin="@dimen/_20sdp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


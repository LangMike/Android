<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CallCost.CallDetails">
    <RelativeLayout android:layout_width="match_parent"
                    android:padding="@dimen/_6sdp"
                    android:id="@+id/toolbarheader"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/_40sdp">


        <ImageView android:layout_width="wrap_content"
                   android:background="@mipmap/ic_back_arrow"
                   android:id="@+id/iv_toobar_back"
                   android:visibility="visible"
                   android:layout_alignParentLeft="true"
                   android:layout_height="wrap_content"/>
        <TextView
                android:textColor="@color/colorPrimary"
                android:text="Call details"
                android:id="@+id/iv_amindset"
                android:textSize="@dimen/_14sdp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#fafeff"

                  android:layout_below="@+id/toolbarheader"
                  android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="2"
                      android:id="@+id/ll_main"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">


            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1.3"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:layout_height="wrap_content">


                <TextView android:layout_width="wrap_content"
                          android:text=""

                          android:layout_gravity="left"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:textColor="@color/black"
                          android:textSize="@dimen/_14sdp"
                          android:id="@+id/name"

                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:text="Conversation details"
                          android:gravity="right"
                          android:layout_gravity="left"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:textSize="@dimen/_12sdp"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent"
                              android:weightSum="2"
                              android:orientation="horizontal"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text="Start"
                              android:layout_gravity="left"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text=""
                              android:layout_gravity="left"
                              android:textColor="@color/black"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:id="@+id/tv_starttime"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:weightSum="2"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text="End"
                              android:layout_gravity="left"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text=""
                              android:layout_gravity="left"
                              android:textColor="@color/black"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:id="@+id/tv_endtime"

                              android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:weightSum="2"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text="Duration"
                              android:layout_gravity="left"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:text=""
                              android:layout_gravity="left"
                              android:textColor="@color/black"
                              android:layout_marginLeft="@dimen/_10sdp"
                              android:layout_marginTop="@dimen/_10sdp"
                              android:textSize="@dimen/_12sdp"
                              android:id="@+id/tv_durationtime"

                              android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight=".7"
                          android:gravity="center"
                          android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@mipmap/ic_list_profile_pic_preview_placeholer"
                        app:civ_border_width="2dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_gravity="center"
                        app:civ_border_color="#FF000000"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_below="@+id/ll_main"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="Cost of the call"
                      android:layout_gravity="left"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_12sdp"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text=""
                      android:textColor="@color/black"
                      android:id="@+id/tv_totalcost"
                      android:layout_gravity="center"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_19sdp"
                      android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_below="@+id/ll_main"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="Review call and user"
                      android:layout_gravity="left"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_12sdp"
                      android:layout_height="wrap_content"/>

            <RatingBar android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="$ 10.00"
                      android:textColor="@color/black"
                      android:layout_gravity="center"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:textSize="@dimen/_19sdp"
                       android:id="@+id/ratingBar"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/submit"
                      android:layout_height="wrap_content"
                      android:layout_width="@dimen/_100sdp"
                      android:layout_gravity="center|bottom"
                      android:text="Submit"
                      android:gravity="center"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginTop="@dimen/_25sdp"
                      style="@style/Button"
            ></TextView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="@dimen/_5sdp"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/chat_tv_left"
              android:layout_width="wrap_content"
              android:textColor="@color/black"
              android:background="@drawable/speech_bubble_simple"
              android:paddingLeft="@dimen/_20sdp"
              android:paddingRight="@dimen/_20sdp"
              android:paddingTop="@dimen/_10sdp"
              android:paddingBottom="@dimen/_10sdp"
              android:layout_gravity="left"
              android:text=""
              android:textSize="@dimen/_14sdp"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/chat_tv_right"
              android:layout_width="wrap_content"
              android:textColor="@color/black"
              android:layout_alignParentRight="true"
              android:text=""
              android:layout_gravity="right"
              android:layout_below="@+id/chat_tv_left"
              android:background="@drawable/speech_bubble_agent"
              android:paddingRight="@dimen/_20sdp"
              android:paddingTop="@dimen/_10sdp"
              android:paddingBottom="@dimen/_10sdp"
              android:paddingLeft="@dimen/_20sdp"

              android:textSize="@dimen/_14sdp"
              android:layout_height="wrap_content"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="@dimen/_280sdp"
                                              android:orientation="vertical"
                                             android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_emailverification"
              android:text="Account details"
              android:textSize="@dimen/_15sdp"
              android:textColor="@color/black"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginBottom="@dimen/_5sdp"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_sendotp"
              android:text="Please provide your account details"
              android:textSize="@dimen/_10sdp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText android:id="@+id/card_holder_name"
              style="@style/EditText"
              android:hint="Name as it appears on  bank"
              android:textAllCaps="true"
              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:textSize="@dimen/_12sdp"

              android:layout_marginRight="@dimen/_15sdp"
    />
    <EditText android:id="@+id/card_holder_address"
              style="@style/EditText"
              android:hint="Address as it appears on  bank"
              android:textAllCaps="true"
              android:textSize="@dimen/_12sdp"

              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
    />
    <EditText android:id="@+id/card_holder_bank_name"
              style="@style/EditText"
              android:hint="Bank name"
              android:textAllCaps="true"
              android:textSize="@dimen/_12sdp"
              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
    />

    <EditText android:id="@+id/card_holder_bank_region"
              style="@style/EditText"
              android:hint="Country/Region of bank"
              android:textAllCaps="true"
              android:textSize="@dimen/_12sdp"
              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
    />



    <EditText android:id="@+id/card_holde_account_number"
              style="@style/EditText"
              android:hint="Account or IBAN number"
              android:textAllCaps="true"
              android:inputType="number"
              android:textSize="@dimen/_12sdp"
              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
    />
    <EditText android:id="@+id/card_holder_bic_short_swift_code"
              style="@style/EditText"
              android:hint="Routing number or BIC(Sort/ Swift code)"
              android:textAllCaps="true"
              android:textSize="@dimen/_12sdp"

              android:inputType="number"
              app:layout_constraintTop_toBottomOf="@+id/tv_sendotp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
    />

    <CheckBox android:id="@+id/rules"
              android:layout_width="318dp"
              android:layout_height="wrap_content"
              android:text="Account operates in USA"
              android:gravity="left|center"
              android:textSize="@dimen/_13sdp"
              android:checked="true"
              android:visibility="gone"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="@dimen/_15sdp"
              android:layout_marginRight="@dimen/_15sdp"
              android:layout_marginTop="@dimen/_15sdp"
              android:clickable="true"
              app:layout_constraintTop_toBottomOf="@+id/others"
    ></CheckBox>

    <TextView android:id="@+id/save_details"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:text="SAVE"
              android:gravity="center"
              android:layout_marginTop="@dimen/_15sdp"
              style="@style/Button"
    ></TextView>

</LinearLayout>
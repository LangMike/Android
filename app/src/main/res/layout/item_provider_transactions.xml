<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:background="@color/bgColor"
                android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
    >

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_below="@+id/rl_userage"
                        android:id="@+id/rl_about_you"
                        android:background="@color/white"
                        android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:id="@+id/tv_name"
                      android:gravity="left|start"
                      android:layout_toLeftOf="@+id/profilepic"
                      android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent"
                      android:text=""
                      android:layout_below="@+id/tv_name"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:id="@+id/tv_total_amount"
                      android:gravity="left|start"
                      android:layout_toLeftOf="@+id/profilepic"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_below="@+id/tv_total_amount"
                          android:id="@+id/ll_duration"
                          android:layout_toLeftOf="@+id/profilepic"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_duration_in_contact"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Duaration in contact"
                        android:gravity="left|start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />
                <TextView
                        android:id="@+id/tv_total_duration"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:gravity="left|start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_below="@+id/ll_duration"
                          android:layout_toLeftOf="@+id/profilepic"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:id="@+id/ll_time"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:gravity="left|start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />
                <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:gravity="left|start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:textSize="@dimen/_11sdp"
                />


            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="@dimen/_60sdp"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/colorPrimary"
                       android:textSize="@dimen/_13sdp"
                       android:layout_marginLeft="@dimen/_10sdp"
                       android:layout_marginRight="@dimen/_20sdp"
                       android:layout_marginTop="@dimen/_1sdp"
                       android:id="@+id/profilepic"
                       android:layout_centerVertical="true"
                       android:background="@mipmap/ic_list_profile_pic_preview_placeholer"
                       android:layout_height="@dimen/_60sdp"/>




            <View android:layout_below="@+id/ll_time"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_1sdp"
                  android:background="@color/gray"></View>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>